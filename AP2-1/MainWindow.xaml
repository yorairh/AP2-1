<Window x:Class="AP2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP2_1"
        mc:Ignorable="d"
        Title="Flight Simulator" Height="450" Width="800">
    <Grid>
        <Button Content="Open File Explorer" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="auto" Click="Button_Click"/>
        <TextBlock Name="tbPath" HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Text="Please enter a .csv file"/>
        <Button x:Name="btnUpload" Content="Upload" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="75" Click="Upload_Click" Visibility="Hidden"/>
        <TextBlock Name="tbSuccess" HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Grid HorizontalAlignment="Left" Height="69" Margin="10,340,0,0" VerticalAlignment="Top" Width="772" Name="gridControl" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75"/>
            <Button Grid.Column="1" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75"/>
            <Button Grid.Column="2" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75"/>
            <Button Grid.Column="3" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75"/>
            <Button Grid.Column="4" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75"/>
            <Button Grid.Column="5" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75"/>
            <Label Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="14">Play Speed:</Label>
            <TextBox Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Text="1.0" MinWidth="20"/>
            <TextBlock Grid.Column="8" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Center"/>
            <Slider Name="sldrTime" HorizontalAlignment="Stretch" Margin="0,15,0,0" Grid.Row="1" Grid.ColumnSpan="9" VerticalAlignment="Top" Minimum="0" />

        </Grid>

    </Grid>
</Window>
