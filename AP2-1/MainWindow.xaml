<Window x:Class="AP2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP2_1"
        mc:Ignorable="d"
        Title="Flight Simulator" Height="450" Width="800" Closing="Window_Closing">
    <Grid Background="LightGray">
        <Button x:Name="btnXML" Content="XML File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="auto" Click="XML_Click"/>
        <Button x:Name="btnCSV" Content="CSV File " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="auto" Click="CSV_Click" Visibility="Hidden"/>
        <TextBlock Name="tbPath" HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Text="Please enter a .xml file"/>
        <Button x:Name="btnUpload" Content="Upload" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="75" Click="Upload_Click" Visibility="Hidden"/>
        <TextBlock Name="tbSuccess" HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Grid HorizontalAlignment="Left" Height="69" Margin="10,340,0,0" VerticalAlignment="Top" Width="772" Name="gridControl" Visibility="Visible">
            <Grid.Background>
                <SolidColorBrush Color="#FFD9DCCE"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button x:Name="btnFastBackward" Grid.Column="0" Content="&lt;&lt;" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75" Click="BtnFastBackward_Click"/>
            <Button x:Name="btnPlay"  Grid.Column="1" Content="Play" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75" Click="BtnPlay_Click"/>
            <Button x:Name="btnPause" Grid.Column="2" Content="Pause" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75" Click="BtnPause_Click"/>
            <Button x:Name="btnFastForward" Grid.Column="3" Content=">>" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="75" Click="BtnFastForward_Click"/>
            <Label Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="14">Play Speed:</Label>
            <Button x:Name="btnMinus" Content="-" Grid.Column="5" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Click="BtnMinus_Click" Width="20"/>
            <TextBox x:Name="tbSpeed"  Text="1.0" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="30,5,55,0" MinWidth="20" Height="20" Width="25" Background="#FFD9DCCE"/>
            <Button x:Name="btnPlus" Content="+" Grid.Column="5" HorizontalAlignment="Left" Margin="60,5,0,0" VerticalAlignment="Top" Width="20" Click="BtnPlus_Click"/>
            <Button Name="btnSpeed" Content="OK" Grid.Column="5" HorizontalAlignment="Left" Margin="85,5,0,0" VerticalAlignment="Top" Width="20" Click="BtnSpeed_Click"/>
            <TextBlock x:Name="tbTime" Grid.Column="6" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Center"/>
            <Slider Name="sldrTime" HorizontalAlignment="Stretch" Margin="0,15,0,0" Grid.Row="1" Grid.ColumnSpan="9" VerticalAlignment="Top" Minimum="0" Thumb.DragStarted="SldrTime_DragStarted" Thumb.DragCompleted="SldrTime_DragCompleted" Foreground="#FFE41C1C" Background="#FFD9DCCE" />
        </Grid>
        <Canvas Name="LayoutInfo" Visibility="Visible">
            <Rectangle HorizontalAlignment="Left" Height="330" VerticalAlignment="Top" Width="431" Fill="#FFD9DCCE " Canvas.Left="351" Canvas.Top="10"/>
            <Ellipse x:Name ="Joystick" Height="120" Canvas.Left="651" Stroke="Black" Canvas.Top="18" Width="120">
                <Ellipse.Fill>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Image Source="joystick.png"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse x:Name ="JoystickHandle" Fill="#FFB9B2AD" Visibility="Visible"/>
            <Rectangle x:Name="RudderLayout" Height="12" Canvas.Left="651" Stroke="#FFB9B2AD" Canvas.Top="143" Width="120" Fill="#FFD9DCCE"/>
            <Rectangle x:Name="RudderTracker" Fill="#FFB9B2AD"/>
            <Rectangle x:Name="ThrottleLayout" Height="120" Canvas.Left="634" Stroke="#FFB9B2AD" Canvas.Top="18" Width="12" Fill="#FFD9DCCE"/>
            <Rectangle x:Name="ThrottleTracker" Fill="#FFB9B2AD"/>
            <TextBlock Canvas.Left="634" TextWrapping="Wrap" Text="Height:                         ft" Canvas.Top="170" Height="16" Width="137" FontWeight="Bold" Foreground="#FFB9B2AD"/>
            <TextBlock x:Name="tbHeight" Canvas.Left="689" TextWrapping="Wrap" Text="" Canvas.Top="170" FontWeight="Bold" Foreground="#FFB9B2AD"/>
            <Rectangle x:Name="recRoll" Fill="#FFB9B2AD" Height="0" Canvas.Left="644" Canvas.Top="202" Width="7"/>
            <Rectangle x:Name="recPitch" Fill="#FFB9B2AD" Height="0" Canvas.Left="658" Canvas.Top="202" Width="7"/>
            <Rectangle x:Name="recYaw" Fill="#FFB9B2AD" Height="0" Canvas.Left="668" Canvas.Top="202" Width="7"/>
            <Rectangle x:Name="recBaseRPY" Fill="#FFB9B2AD" Height="3" Canvas.Left="644" Canvas.Top="199" Width="31"/>
            <TextBlock Canvas.Left="645" TextWrapping="Wrap" Text="R  P  Y" Canvas.Top="186" Foreground="#FFB9B2AD" Height="13" Width="30" FontSize="10"/>
            <TextBlock Canvas.Left="634" TextWrapping="Wrap" Text="0" Canvas.Top="194" Foreground="#FFB9B2AD" Height="14" Width="9" FontSize="10"/>
            <TextBlock Canvas.Left="625" TextWrapping="Wrap" Text="360" Canvas.Top="319" Foreground="#FFB9B2AD" Height="14" Width="21" FontSize="10"/>
            <Menu Margin=" 360 30 0 0" >
                <MenuItem x:Name="propertyMenu" Header="Properties" Click="propertyMenu_Click" Background="#FFDDDDDD" BorderBrush="Black" Width="Auto"/>
            </Menu>
        </Canvas>
    </Grid>
</Window>